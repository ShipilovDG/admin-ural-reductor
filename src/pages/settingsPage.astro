                  <input type="password" disabled class="site-section__form-control-input settings-page__form-control-input" value="12345678" x-init="$watch('togglePasswordView2', value => value === true ? $el.type = 'text' : $el.type = 'password')">
                </div>
                <button type="button" class="settings-page__toggle-password-btn" x-on:click="togglePasswordView2 = !togglePasswordView2">
                    <svg class="settings-page__toggle-password-icon unseen" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg" x-show="togglePasswordView2 === false">
                        <path d="M2.1 1L21.9 20.8M10.4424 9.34567C10.0296 9.75819 9.79755 10.3178 9.79735 10.9014C9.79714 11.485 10.0288 12.0448 10.4413 12.4576C10.8538 12.8704 11.4134 13.1024 11.997 13.1026C12.5806 13.1028 13.1404 12.8712 13.5532 12.4587M9.0993 3.6015C10.0425 3.33169 11.019 3.19652 12 3.2C16.4 3.2 20.0663 5.7663 23 10.9C22.1442 12.3971 21.2268 13.6764 20.2467 14.7368M17.8927 16.7839C16.0986 17.9939 14.1362 18.6 12 18.6C7.6 18.6 3.9337 16.0337 1 10.9C2.5059 8.2655 4.2043 6.3075 6.0952 5.0249" stroke="#859AB9" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
