<div class="popup settings-popup settings-email-page-list-popup" x-bind:class="{'active': settingsEmailPageListPopup === true}" x-data="{checkedState: ''}">
    <form action="#" method="post" class="popup__form settings-popup__form">
    <div class="popup__content settings-popup__content">
    <div class="popup__top-row settings-popup__top-row">
        <button class="popup__close-btn mobile" type="button" x-on:click="settingsEmailPageListPopup = false">
            <svg class="popup__close-btn-icon" width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 1L7 7L13 1" stroke="#869AB8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>                  
        </button>
        <button class="popup__close-btn desktop" type="button" x-on:click="settingsEmailPageListPopup = false">
            <svg class="popup__close-btn-icon" width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.53333 1L1 9.53333M1 1L9.53333 9.53333" stroke="#869AB8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>            
        </button>
        <h2 class="popup__title settings-popup__title">
            Настройка списка
        </h2>
    </div>
    <div class="popup__body settings-popup__body">
        <fieldset class="settings-popup__fieldset settings-email-page-list-popup__fieldset btn-control-group">
          <button type="button" class="settings-email-page-list-popup__select-all-btn" x-on:click="checkedState = true">
            Выделить всё
          </button>
          <button type="button" class="settings-email-page-list-popup__cancel-all-btn" x-on:click="checkedState = false">
            Отменить всё
          </button>
        </fieldset>
        <fieldset class="settings-popup__fieldset">
        <ul role="list" class="settings-popup__list">
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Контакт" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Контакт" class="settings-popup__list-item-label">Контакт</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Дата" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Дата" class="settings-popup__list-item-label">Дата</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Папка" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Папка" class="settings-popup__list-item-label">Папка</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Теги" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Теги" class="settings-popup__list-item-label">Теги</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="№" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="№" class="settings-popup__list-item-label">№</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="Прочитано" id="Прочитано" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Прочитано" class="settings-popup__list-item-label">Прочитано</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Тип письма" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Тип письма" class="settings-popup__list-item-label">Тип письма</label>
            </li>
            <li class="settings-popup__list-item">
                <input type="checkbox" name="2" id="Связано с предложением" class="settings-popup__list-item-checkbox" x-bind:checked="checkedState === true ? true : false">
                <label for="Связано с предложением" class="settings-popup__list-item-label">Связано с предложением</label>
            </li>
        </ul>
        </fieldset>
    </div>
    <ul role="list" class="settings-popup__btn-control-group">
        <li class="settings-popup__btn-control-group-item settings-popup__btn-control-group-item--undo-icon">
            <svg class="settings-popup__undo-icon" width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
